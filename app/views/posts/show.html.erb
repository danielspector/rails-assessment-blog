<h2><%= @post.title %></h2>

<p><%= @post.body %></p>

<h3>Add a comment!</h3>

<%= form_tag("/posts/#{@post.id}/comments", method: "post") do %>
<%= label_tag :body  %>
<%= text_field_tag :body%>
<%= submit_tag %>
<% end %>

<% if @post.comments.length > 0 %>
<h3>Comments:</h3>
<% end %>

<ol>
  <% @post.comments.each do |comment| %>
  <li><%= comment.body %></li>
  <% end %>
</ol>